{
  "name": "@cloudflair/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local --persist-to .wrangler/state",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "migrate:create": "drizzle-kit generate:sqlite",
    "migrate:apply": "wrangler d1 execute cloudflair-db --local --file=./migrations/*.sql",
    "migrate:apply:remote": "wrangler d1 execute cloudflair-db --file=./migrations/*.sql"
  },
  "dependencies": {
    "@cloudflair/lib": "workspace:*",
    "@cloudflare/workers-types": "^4.20240117.0",
    "drizzle-orm": "^0.29.3",
    "hono": "^3.12.8",
    "stripe": "^14.14.0",
    "zod": "^3.22.4",
    "date-fns": "^3.3.1",
    "nanoid": "^5.0.5",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2",
    "wrangler": "^3.28.2"
  }
}
